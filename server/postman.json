			"item": [
				{
					"name": "Register New Customer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Customer\",\n    \"email\": \"john.customer@example.com\",\n    \"password\": \"password1234\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"register"
							]
						},
						"description": "Cria um novo usuário no sistema. A role padrão 'CUSTOMER' será atribuída automaticamente."
					},
					"response": []
				},
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.access_token) {",
									"        pm.collectionVariables.set(\"accessToken\", response.access_token);",
									"        console.log(\"Access Token salvo na variável da coleção.\");",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"john.customer@example.com\",\n    \"password\": \"password1234\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Autentica um usuário e retorna um access_token. O token é salvo automaticamente na variável `{{accessToken}}` para ser usado em rotas protegidas."
					},
					"response": []
				}
			]
		},
